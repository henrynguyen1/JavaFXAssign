<VBox xmlns:fx="http://javafx.com/fxml" fx:controller = "controller.AddToCatalogueController"
    alignment= "center" spacing="10" prefWidth="400" styleClass="root">

	<stylesheets>
		<URL value="@computerbuilder.css" />
	</stylesheets>
        
        <GridPane alignment = "center" hgap = "10" vgap = "10">
            <Label text = "Type:" GridPane.columnIndex = "0" GridPane.rowIndex = "1"/>
            <TextField fx:id = "typeAddTf" GridPane.columnIndex = "1" GridPane.rowIndex = "1"/>
            <Label text = "Name:" GridPane.columnIndex = "0" GridPane.rowIndex = "2"/>
            <TextField fx:id = "nameAddTf" GridPane.columnIndex = "1" GridPane.rowIndex = "2"/>
            <Label text = "Price:" GridPane.columnIndex = "0" GridPane.rowIndex = "3"/>
            <TextField fx:id = "priceAddTf" GridPane.columnIndex = "1" GridPane.rowIndex = "3"/>
        </GridPane>
        <HBox alignment="center" spacing="10">
             <Button text = "Add to Catalogue" onAction= "#handleAddPart"></Button>
        </HBox>
</VBox>

